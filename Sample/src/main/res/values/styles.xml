<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:textColorPrimary">@color/white</item> 标准title的颜色-->
        <!-- 设置通用的背景色-->
        <item name="android:windowBackground">@color/colorWindowBg</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <!-- actionbar统一的返回图标-->
        <item name="homeAsUpIndicator">@mipmap/ab_back</item>
        <!-- 设置pager indicater的颜色-->
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <!-- 设置actionbar上字体的大小-->
        <item name="actionMenuTextAppearance">@style/ActionMenuText</item>
        <!-- 设置actionbar的样式-->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- 设置recycleview分割线-->
        <item name="android:listDivider">@drawable/custom_divider</item>

    </style>

    <style name="AppNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBg</item>
    </style>

    <style name="AppDrawer" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColorPrimary">@color/md_green_50</item>-->
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pull_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>

    <!-- ToolBar 浅色菜单样式 -->
    <style name="ToolbarLightTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/text_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <!-- ToolBar 深色菜单样式 -->
    <style name="ToolbarDarkTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/text_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- actionbar fontstyle-->
    <style name="ActionMenuText" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- actionbar font -->
    <style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TextAppearance</item>
    </style>

    <style name="AppTheme.ActionBar.TextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="fontPath">MILT_RG.ttf</item>
    </style>

    <!--pager tab-->
    <style name="pagertab_style">
        <item name="android:background">@drawable/tab_bg_normal</item>
        <item name="apTabBackground">@drawable/tab_bg_transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="apTabIndicatorColor">@android:color/transparent</item>
        <item name="apTabUnderlineColor">@android:color/transparent</item>
        <item name="apTabUnderlineHeight">0dp</item>
        <item name="apTabDividerColor">#1A000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">20dp</item>
        <item name="apTabDrawMode">text</item>
        <item name="apTabTextSelectColor">@color/colorPrimary</item>
    </style>

    <!--textAppearance 小米兰亭-->
    <style name="TextAppearance.MILT" parent="android:TextAppearance">
        <item name="fontPath">MILT_RG.ttf</item>
    </style>

    <!-- textAppearance 华康少女-->
    <style name="TextAppearance.HKGIRL" parent="android:TextAppearance">
        <item name="fontPath">HKGIRLW5.TTF</item>
    </style>

</resources>
