<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".page.home.HomeActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="MyLibApp2.0 测试"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_http"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1、Http测试" />

            <Button
                android:id="@+id/btn_takepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2、拍照,相册测试" />

            <Button
                android:id="@+id/btn_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3、viewpager及Eventbus测试" />

            <Button
                android:id="@+id/btn_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3、字体改" />

            <Button
                android:id="@+id/btn_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4、数据库测试" />

            <Button
                android:id="@+id/btn_autopager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5、自动ViewPager" />

            <Button
                android:id="@+id/btn_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6、通知栏显示" />

            <Button
                android:id="@+id/btn_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7、drawer测试" />

            <Button
                android:id="@+id/btn_ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8、获取ssid测试" />
        </LinearLayout>


    </ScrollView>
</RelativeLayout>
